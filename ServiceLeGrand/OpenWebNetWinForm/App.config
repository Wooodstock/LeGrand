<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.net>
   <settings>
      <servicePointManager expect100Continue="false" />
   </settings>
  </system.net>

  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="metadata">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="MyClient">      
          <dataContractSerializer maxItemsInObjectGraph="2147483647" />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="metadata" name="ServiceLegrand.ServiceLegrand">
        <endpoint address="http://172.20.10.13:8030/OpenWebNet" binding="basicHttpBinding"
          contract="InterfaceServiceLegrand.IServiceLegrand" />

        <!--<endpoint
          behaviorConfiguration="MyClient"
          address="http://169.254.251.172:8020/OpenWebNetMex"
          binding="mexHttpBinding"
          contract="InterfaceServiceLegrand.IServiceLegrand"/>-->
        <host>
          <baseAddresses>
            <add baseAddress="http://172.20.10.13:8031/ServiceOpenWebNet" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>